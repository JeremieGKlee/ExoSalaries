{% extends 'base.html.twig' %}

{% block contenu %}
    <table>
        <thead>
            <tr>
                <th>SALARIE</th>
                <th>DATE DE NAISSANCE</th>
                <th>ADRESSE</th>
                <th>CP</th>
                <th>VILLE</th>
                <th>DATE EMBAUCHE</th>
                <th>ENTREPRISE</th>
                <th>MODIFICATION</th>
                <th>SUPPRESSION</th>

            </tr>
        </thead>
        <tbody>
            {% for salarie in salaries %}
                <tr>
                    <td><a href="{{ path('salarie_show', {'id':salarie.id}) }}">{{ salarie.nom ~ ' ' ~ salarie.prenom }}</a></td>
                    <td>{{ salarie.dateNaissance | date('d/m/Y') }}</td>
                    <td>{{ salarie.adresse }}</td>
                    <td>{{ salarie.cp }}</td>
                    <td>{{ salarie.ville }}</td>
                    <td>{{ salarie.dateEmbauche | date('d/m/Y') }}</td>
                    <td>{{ salarie.entreprise.raisonSociale }}</td>
                    <td><a href="{{ path('salarie_edit', {'id':salarie.id}) }}">Modifier</a></td>
                    <td><a href="{{ path('salarie_delete', {'id':salarie.id}) }}">Supprimer</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
